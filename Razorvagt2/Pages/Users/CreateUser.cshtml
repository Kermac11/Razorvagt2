@page
@model Razorvagt2.Pages.Users.CreateUserModel
@{
}
<form method="post">
	<div class="form-group">
		<label asp-for="@Model.User.Username" class="custom-control-label"></label>
		<input asp-for="@Model.User.Username" class="form-control" />
		<span class="field-validation-error text-danger" asp-validation-for="User.Username"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.User.Password" class="custom-control-label"></label>
		<input asp-for="@Model.User.Password" type="password" class="form-control" />
		<span class="field-validation-error text-danger" asp-validation-for="User.Password"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.User.Name" class="custom-control-label"></label>
		<input asp-for="@Model.User.Name" class="form-control" />
		<span class="field-validation-error text-danger" asp-validation-for="User.Name"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.User.EMail" class="custom-control-label"></label>
		<input asp-for="@Model.User.EMail" class="form-control" />
		<span class="field-validation-error text-danger" asp-validation-for="User.EMail"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.User.Phone" class="custom-control-label"></label>
		<input asp-for="@Model.User.Phone" class="form-control" />
		<span class="field-validation-error text-danger" asp-validation-for="User.Phone"></span>
	</div>
	<div>
		<label asp-for="@Model.User.Admin" class="custom-control-label"></label>
		<input asp-for="@Model.User.Admin" type="checkbox" value="true" />
	</div>
	<div class="form-group">
		<input type="submit" value="Create"/>
		<a asp-page="../Index">Cancel</a>
	</div>
</form>